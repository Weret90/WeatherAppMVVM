<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="table_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">@dimen/default_table_item_padding</item>
        <item name="android:textSize">@dimen/table_item_text_size</item>
    </style>

    <style name="city_item_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="city_info_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/big_margin</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="headline_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/headline_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">@dimen/big_margin</item>
        <item name="android:layout_marginEnd">@dimen/big_margin</item>
        <item name="android:layout_marginBottom">@dimen/big_margin</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>